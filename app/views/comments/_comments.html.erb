<% if @commentable.comments.empty? %>
  No comments found!
<% else %>
  <% @commentable.comments.each do |comment|%>
  <div style="padding: 10px; margin: 10px; background: lightgreen; border: 2px solid green">
   <%= simple_format comment.comment %>
   <small>Posted On:<%= format_date(comment.created_at)%></small><br/>
      <small>Posted By:<%=comment.user.name%></small>
   
  </div> 
  <% end %> 
<% end %>  



